<!-- Put site-specific property overrides in this file. -->

<configuration>
   <property>
      <name>serverless.metadatacache.enabled</name>
      <value>true</value>
   </property>
   <property>
      <name>serverless.zookeepers.hosts</name>
      <!--<value>10.150.0.17:2181</value>-->
      <value>10.150.0.10:2181,10.150.0.19:2181,10.150.0.18:2181</value>
   </property>
   <property>
      <name>serverless.task.purgeinterval</name> <!-- How often to attempt to purge things from the cache. -->
      <value>10000</value> <!-- Every ten seconds. -->
   </property>
   <!-- Disable quota for now. It causes errors with subtree protocol. -->
   <property>
      <name>dfs.namenode.quota.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.quota.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.transaction.stats.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.transaction.stats.detailed.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>serverless.tcp.enabled</name>
      <value>true</value>
   </property>
   <property>
      <name>dfs.support.append</name>
      <value>true</value>
   </property>
   <property>
      <name>serverless.http.maxretries</name>
      <value>3</value>
   </property>
   <property>
      <name>storage.ndb.debug.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.heartbeat.interval</name>
      <value>5</value>
   </property>
   <property>
      <name>dfs.replication</name>
      <value>1</value>
   </property>
   <property>
      <name>serverless.tcp.debuglogenabled</name>
      <value>false</value>
   </property>
   <property>
      <name>serverless.deployments.max</name>
      <value>20</value>
   </property>
   <property>
      <name>serverless.endpoint</name>
      <value>https://34.86.224.47:444/api/v1/web/whisk.system/default/namenode</value>
      <!--<value>https://34.75.77.177:444/api/v1/web/whisk.system/default/namenode</value>-->
   </property>
   <property>
      <name>serverless.platform</name>
      <value>openwhisk</value>
   </property>
   <property>
      <name>dfs.storage.driver.configfile</name>
      <value>/metadata-dal/ndb-config.properties</value>
   </property>
   <property>
      <name>dfs.storage.driver.jarFile</name>
      <value>/metadata-dal/hops-metadata-dal-impl-ndb-3.2.0.3-SNAPSHOT.jar</value>
   </property>
   <property>
      <name>dfs.storage.driver.class</name>
      <value>io.hops.metadata.ndb.NdbStorageFactory</value>
   </property>
   <property>
      <name>serverless.consistency.usendb</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.dir.delete.batch.size</name>
      <value>1024</value> <!-- Default value is 50. -->
   </property>
   <property>
      <name>dfs.namenode.accesstime.precision</name>
      <value>0</value>
   </property>
   <property>
      <name>serverless.spoof.ndb</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.namenode.xattrs.enabled</name>
      <value>false</value>
   </property>
   <!--
      Threshold at which we batch the sub-operations that occur during a subtree delete operation.
      If a directory within a subtree that we're deleting contains strictly > this many files, then
      we use multiple NNs to perform the individual delete operations within that directory.
   -->
   <property>
      <name>serverless.subtree.delete.batchsize</name>
      <value>64</value>
   </property>
    <property>
        <name>serverless.straggler.mitigation.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>serverless.straggler.mitigation.threshold</name>
        <value>3</value>
    </property>    
</configuration>
